<?xml version="1.0" encoding="utf-8"?>
<plugin 
    xmlns="http://www.phonegap.com/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    id="com.chariotsolutions.toast.plugin" 
    version="1.0.0">
    
    <name>Toasty</name>
    
    <asset src="assets/www/phonegap-toast.js" target="phonegap-toast.js"/>

    <platform name="android">
                
        <!-- Cordova 1.5 - 1.9 -->
        <config-file target="res/xml/plugins.xml" parent="/plugins">
            <plugin name="Toasty" value="com.chariotsolutions.toast.plugin.ToastPlugin"/>            
        </config-file>
        
        <!-- Cordova 2.0.0 -->
        <config-file target="res/xml/config.xml" parent="/cordova/plugins">
            <plugin name="Toasty" value="com.chariotsolutions.toast.plugin.ToastPlugin"/>            
        </config-file>
        
        <source-file src="com/chariotsolutions/toast/plugin/ToastPlugin.java"
            target-dir="src/com/chariotsolutions/toast/plugin"/>
        
    </platform>
</plugin>
